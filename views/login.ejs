<%- include('layout/head'); %>
<title>登入</title>
<%- include('layout/header'); %>

<div class="text-center ">
    <h1 class="page-header text-center m-5">登入頁面</h1>
</div>
<div class="row">
<form action="/login" method="post" class="m-auto" role="form">
    <div class="form-group">
        <label for="account" class="col-sm-12  control-label">帳號 :</label>
        <div class="col-sm-12 m-auto">
            <input type="text" name="account" class="form-control" >
        </div>
    </div>

    <div class="form-group">
        <label for="password" class="col-sm-9 control-label">密碼 :</label>
        <div class="col-sm-12 m-auto">
            <input type="password" name="password" class="form-control" >
        </div>    
    </div>

    <div class="m-auto col-sm-5">
        <input type="submit" class="btn btn-dark" value="登入">
    </div>
</form>
</div>
<%- include('layout/footer'); %>

    
